@model QuanLyTiemChung.Web.Models.Vaccine
@{
    ViewData["Title"] = "Thêm Vắc-xin Mới";
}

<h1>@ViewData["Title"]</h1>
<p>Điền thông tin cơ bản và cấu hình các liều tiêm cho vắc-xin mới.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateVaccine">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="TradeName" class="form-label fw-bold"></label>
                <input asp-for="TradeName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="GenericName" class="form-label fw-bold"></label>
                <input asp-for="GenericName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="VaccineCategoryId" class="form-label fw-bold"></label>
                <select asp-for="VaccineCategoryId" class="form-select" asp-items="@(ViewData["VaccineCategories"] as SelectList)">
                    <option value="">-- Vui lòng chọn danh mục --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Manufacturer" class="form-label fw-bold"></label>
                <input asp-for="Manufacturer" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <hr/>
            
            <h4>Cấu hình Liều tiêm</h4>
            <div id="doses-container">
                </div>
            <button type="button" id="add-dose-btn" class="btn btn-outline-success mt-2">
                <i class="fas fa-plus me-2"></i>Thêm Liều tiêm
            </button>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="ManageVaccines" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {
            let doseIndex = 0;
            const container = $("#doses-container");

            $("#add-dose-btn").on("click", function () {
                const doseHtml = `
                    <div class="dose-entry card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="card-title mb-0">Liều số ${doseIndex + 1}</h6>
                                <button type="button" class="btn btn-sm btn-danger remove-dose-btn">Xóa</button>
                            </div>
                            <input type="hidden" name="Doses[${doseIndex}].DoseNumber" value="${doseIndex + 1}" />
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label for="Doses_${doseIndex}__IntervalFromPreviousDoseInDays" class="form-label">Khoảng cách từ mũi trước (ngày)</label>
                                    <input type="number" min="0" name="Doses[${doseIndex}].IntervalFromPreviousDoseInDays" class="form-control" placeholder="Mũi đầu tiên để trống hoặc 0" />
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label for="Doses_${doseIndex}__RecommendedAge" class="form-label">Độ tuổi khuyến nghị</label>
                                    <input type="text" name="Doses[${doseIndex}].RecommendedAge" class="form-control" placeholder="VD: Trẻ từ 2 tháng tuổi" />
                                </div>
                            </div>
                        </div>
                    </div>`;
                
                container.append(doseHtml);
                doseIndex++;
            });

            // Xử lý sự kiện xóa một liều tiêm
            container.on("click", ".remove-dose-btn", function () {
                $(this).closest(".dose-entry").remove();
                reindexDoses();
            });

            function reindexDoses() {
                doseIndex = 0;
                container.find(".dose-entry").each(function () {
                    $(this).find(".card-title").text(`Liều số ${doseIndex + 1}`);
                    // Cập nhật lại chỉ số (index) trong thuộc tính 'name' của các input
                    $(this).find("input").each(function () {
                        const oldName = $(this).attr("name");
                        if (oldName) {
                            const newName = oldName.replace(/Doses\[\d+\]/g, `Doses[${doseIndex}]`);
                            $(this).attr("name", newName);
                        }
                    });
                    // Cập nhật lại giá trị cho DoseNumber
                     $(this).find("input[name$='.DoseNumber']").val(doseIndex + 1);
                    doseIndex++;
                });
            }

            // Tự động thêm liều đầu tiên khi tải trang
            $("#add-dose-btn").click();
        });
    </script>
}
