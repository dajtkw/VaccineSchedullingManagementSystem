@* Views/Admin/_AppointmentsContent.cshtml *@
@model IEnumerable<QuanLyTiemChung.Web.ViewModels.AppointmentViewModel>
@{
    Func<string, string> GetStatusBadgeClass = (status) =>
    {
        return status switch
        {
            "Confirmed" => "badge bg-success",
            "Completed" => "badge bg-primary",
            "Pending" => "badge bg-warning text-dark",
            "Cancelled" => "badge bg-danger",
            _ => "badge bg-secondary"
        };
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <p class="text-muted">Xem và duyệt các lịch hẹn tiêm chủng đã được đăng ký.</p>
    </div>
    <div>
        <div class="btn-group">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-filter me-2"></i>Lọc theo trạng thái
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="filterAppointments('all')">Tất cả</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterAppointments('Pending')">Chờ xác nhận</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterAppointments('Confirmed')">Đã xác nhận</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterAppointments('Completed')">Đã hoàn thành</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterAppointments('Cancelled')">Đã hủy</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Tìm kiếm -->
<div class="mb-4">
    <div class="input-group">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <input type="text" id="appointmentSearch" class="form-control"
            placeholder="Tìm kiếm theo tên người dùng, vắc-xin...">
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Người đăng ký</th>
                        <th>Vắc-xin</th>
                        <th>Địa điểm</th>
                        <th>Ngày hẹn</th>
                        <th class="text-center">Mũi thứ</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody id="appointmentTableBody">
                    @foreach (var appt in Model)
                    {
                        <tr data-status="@appt.Status">
                            <td class="ps-4">
                                <span>@appt.UserFullName</span>
                            </td>
                            <td>@appt.VaccineName</td>
                            <td>
                                <div>@appt.SiteName</div>
                                <small class="text-muted">@appt.SiteAddress</small>
                            </td>
                            <td>@appt.ScheduledDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">@appt.DoseNumber</td>
                            <td class="text-center">
                                <span class="@GetStatusBadgeClass(appt.Status)">@appt.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-info" data-action="view-appointment"
                                        data-appointment-id="@appt.Id" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    @if (appt.Status == "Pending")
                                    {
                                        <button class="btn btn-sm btn-outline-success" data-action="confirm-appointment"
                                            data-appointment-id="@appt.Id" title="Xác nhận lịch hẹn">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" data-action="cancel-appointment"
                                            data-appointment-id="@appt.Id" title="Hủy lịch hẹn">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
