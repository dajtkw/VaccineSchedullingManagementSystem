@model QuanLyTiemChung.Web.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Thêm Người Dùng Mới";
}

<h1>@ViewData["Title"]</h1>
<p>Điền thông tin để tạo một tài khoản mới trong hệ thống.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateUser">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedRole" class="form-label fw-bold"></label>
                <select asp-for="SelectedRole" asp-items="@Model.AllRoles" class="form-select">
                    <option value="">-- Vui lòng chọn vai trò --</option>
                </select>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
                <a asp-action="ManageUsers" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}