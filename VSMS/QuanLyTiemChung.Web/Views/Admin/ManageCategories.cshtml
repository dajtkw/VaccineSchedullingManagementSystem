@model IEnumerable<QuanLyTiemChung.Web.Models.VaccineCategory>
@{
    ViewData["Title"] = "Quản Lý Danh Mục Vắc-xin";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">Thêm, sửa, hoặc xóa các danh mục để phân loại vắc-xin.</p>
    </div>
    <div>
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm Danh mục Mới
        </a>
    </div>
</div>

<partial name="_StatusMessage" />

<div class="card shadow-sm">
    <div class="card-body p-0">
         <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tên Danh mục</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle ps-4">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-end pe-4">
                                <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                                <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
