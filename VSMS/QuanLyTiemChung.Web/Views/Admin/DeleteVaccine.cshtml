@model QuanLyTiemChung.Web.Models.Vaccine
@{
    ViewData["Title"] = "Xác Nhận Xóa Vắc-xin";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa vắc-xin này không?</h3>
<hr />
<div>
    <h4>Thông tin Vắc-xin</h4>
    <dl class="row">
        <dt class = "col-sm-3">Tên thương mại</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.TradeName)</dd>

        <dt class = "col-sm-3">Tên chung</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.GenericName)</dd>
        
        <dt class = "col-sm-3">Nhà sản xuất</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.Manufacturer)</dd>
    </dl>
    
    <form asp-action="DeleteVaccine">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="ManageVaccines" class="btn btn-secondary">Hủy bỏ</a>
    </form>
</div>
