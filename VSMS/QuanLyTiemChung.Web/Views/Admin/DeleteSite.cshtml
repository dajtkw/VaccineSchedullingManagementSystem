@model QuanLyTiemChung.Web.Models.VaccinationSite
@{
    ViewData["Title"] = "Xác Nhận Xóa Địa Điểm";
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<h3>Bạn có chắc chắn muốn xóa vĩnh viễn địa điểm này không?</h3>
<p class="text-danger">Hành động này không thể được hoàn tác.</p>
<hr />

<div class="alert alert-warning">
    <h4>Thông tin địa điểm sẽ bị xóa:</h4>
    <dl class="row mt-3">
        <dt class = "col-sm-3">Tên Địa Điểm</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class = "col-sm-3">Địa chỉ</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

        <dt class = "col-sm-3">Giờ hoạt động</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.OperatingHours)</dd>
    </dl>
</div>
    
<form asp-action="DeleteSite">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i>Vâng, Xóa Ngay
    </button>
    <a asp-action="ManageSites" class="btn btn-secondary">
        <i class="fas fa-times me-2"></i>Hủy bỏ
    </a>
</form>
