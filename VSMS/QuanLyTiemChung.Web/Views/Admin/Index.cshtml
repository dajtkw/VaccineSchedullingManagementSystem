@* Views/Admin/Index.cshtml *@
@{
    ViewData["Title"] = "Quản Trị Hệ Thống";
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <!-- Sidebar Navigation -->
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <h4><i class="fas fa-shield-alt"></i> Admin Panel</h4>
        </div>
        <nav class="sidebar-nav">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#" data-target="dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-target="users">
                        <i class="fas fa-users"></i> Quản Lý Người Dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-target="appointments">
                        <i class="fas fa-calendar-check"></i> Quản Lý Lịch Hẹn
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-target="vaccines">
                        <i class="fas fa-syringe"></i> Quản Lý Vắc-xin
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-target="categories">
                        <i class="fas fa-tags"></i> Danh Mục Vắc-xin
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-target="sites">
                        <i class="fas fa-map-marker-alt"></i> Điểm Tiêm Chủng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-target="inventory">
                        <i class="fas fa-boxes"></i>
                        <span>Quản lý Tồn kho</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="admin-content">
        <div class="content-header">
            <h2 id="page-title">Dashboard</h2>
            <div class="header-actions">
                <button class="btn btn-outline-secondary" onclick="refreshContent()">
                    <i class="fas fa-sync-alt"></i> Làm mới
                </button>
            </div>
        </div>

        <!-- Dynamic Content Container -->
        <div id="main-content" class="content-body">
            <div class="loading-spinner text-center p-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
                <p class="mt-2">Đang tải dữ liệu...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-spa.js"></script>
}
