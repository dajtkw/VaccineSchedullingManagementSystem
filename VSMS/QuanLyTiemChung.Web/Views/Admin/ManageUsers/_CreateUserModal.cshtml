@* Views/Admin/_CreateUserModal.cshtml *@
@model QuanLyTiemChung.Web.ViewModels.CreateUserViewModel

<form id="createUserForm" data-url="/Admin/CreateUserApi">
    @Html.AntiForgeryToken()
    
    <!-- Validation Summary -->
    <div id="validation-summary" class="alert alert-danger" style="display: none;"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FullName" class="form-label">
                Họ và tên <span class="text-danger">*</span>
            </label>
            <input asp-for="FullName" class="form-control" required />
            <div asp-validation-for="FullName" class="invalid-feedback"></div>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label">
                Email <span class="text-danger">*</span>
            </label>
            <input asp-for="Email" class="form-control" type="email" required />
            <div asp-validation-for="Email" class="invalid-feedback"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label">
                Ngày sinh <span class="text-danger">*</span>
            </label>
            <input asp-for="DateOfBirth" type="date" class="form-control" required />
            <div asp-validation-for="DateOfBirth" class="invalid-feedback"></div>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PhoneNumber" class="form-label">
                Số điện thoại <span class="text-danger">*</span>
            </label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <div asp-validation-for="PhoneNumber" class="invalid-feedback"></div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <div asp-validation-for="Address" class="invalid-feedback"></div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Password" class="form-label">
                Mật khẩu <span class="text-danger">*</span>
            </label>
            <input asp-for="Password" type="password" class="form-control" required />
            <small class="form-text text-muted">Tối thiểu 6 ký tự</small>
            <div asp-validation-for="Password" class="invalid-feedback"></div>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ConfirmPassword" class="form-label">
                Xác nhận mật khẩu <span class="text-danger">*</span>
            </label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            <div asp-validation-for="ConfirmPassword" class="invalid-feedback"></div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="SelectedRole" class="form-label">
            Vai trò <span class="text-danger">*</span>
        </label>
        <select asp-for="SelectedRole" asp-items="@Model.AllRoles" class="form-select" required>
            <option value="">-- Vui lòng chọn vai trò --</option>
        </select>
        <div asp-validation-for="SelectedRole" class="invalid-feedback"></div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-2"></i>Hủy
        </button>
        <button type="submit" class="btn btn-primary" id="createUserBtn">
            <i class="fas fa-save me-2"></i>Tạo mới
        </button>
    </div>
</form>
