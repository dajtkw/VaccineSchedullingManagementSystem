@* Views/Admin/_DashboardContent.cshtml *@
@model QuanLyTiemChung.Web.ViewModels.AdminDashboardViewModel

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Người Dùng</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Truy cập nhanh</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-primary btn-block" onclick="loadContent('users')">
                            <i class="fas fa-users me-2"></i>Quản Lý Người Dùng
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-success btn-block" onclick="loadContent('appointments')">
                            <i class="fas fa-calendar-check me-2"></i>Quản Lý Lịch Hẹn
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-info btn-block" onclick="loadContent('vaccines')">
                            <i class="fas fa-syringe me-2"></i>Quản Lý Vắc-xin
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-warning btn-block" onclick="loadContent('sites')">
                            <i class="fas fa-map-marker-alt me-2"></i>Quản Lý Điểm Tiêm
                        </a>
                    </div>
                    @* --- BUTTON MỚI ĐƯỢC THÊM VÀO --- *@
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-dark btn-block" onclick="loadContent('inventory')">
                            <i class="fas fa-boxes me-2"></i>Quản Lý Tồn Kho
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>