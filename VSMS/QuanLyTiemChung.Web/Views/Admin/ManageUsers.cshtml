@model IEnumerable<QuanLyTiemChung.Web.Models.User>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">Xem và quản lý tất cả người dùng trong hệ thống.</p>
    </div>
    <div>
        <a href="CreateUser" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Thêm Người Dùng
        </a>
    </div>
</div>

<partial name="_StatusMessage" />

<div class="card shadow-sm">
    <div class="card-header">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" id="userSearch" class="form-control" placeholder="Tìm kiếm theo họ tên hoặc email...">
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Họ Tên</th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Vai Trò</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4">@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @foreach (var userRole in user.UserRoles)
                                {
                                    var badgeClass = userRole.Role.Name switch {
                                        "Admin" => "bg-danger",
                                        "HealthOfficial" => "bg-success",
                                        "Citizen" => "bg-primary",
                                        _ => "bg-secondary"
                                    };
                                    <span class="badge @badgeClass me-1">@userRole.Role.Name</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#userSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#userTableBody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
